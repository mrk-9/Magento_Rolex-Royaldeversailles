<?xml version="1.0"?>
<config>
	<tabs>
        <FME translate="label">
            <label>FME Extensions</label>
            <sort_order>100</sort_order>
        </FME>
    </tabs>
	<sections>
        <layerednav translate="label">
			<tab>FME</tab>
            <label>FME Layered Navigation</label>
            <frontend_type>text</frontend_type>
            <sort_order>120</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <layerednav translate="label comment" module="layerednav">
                    <label>Layered Navigation Pro</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>800</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cat_style translate="label">
                            <label>Categories Filter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>layerednav/system_config_source_category</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cat_style>
                        <price_style translate="label">
                            <label>Price Filter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>layerednav/system_config_source_price</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </price_style>
                        <remove_links translate="label">
                            <label>Remove Links from the Navigation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This prevents `Duplicate content` penalty from search engines, however customers with disabled JavaScript wont be able to use the filters]]></comment>
                        </remove_links>
                        <reset_filters translate="label">
                            <label>Reset Filters while Click on Another Category</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reset_filters>                       
                        <reload_categories translate="label">
                            <label>Reload page while Click on Another Category</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reload_categories>
						<show_swatches translate="label">
                            <label>Show Icons for Colors ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>layerednav/system_config_source_swatches</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_swatches>
                    </fields>
                </layerednav>
            </groups>
        </layerednav>
  	</sections>
</config>